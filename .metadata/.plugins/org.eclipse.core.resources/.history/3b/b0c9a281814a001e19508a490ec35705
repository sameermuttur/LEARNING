package com.kodnest.javapatterns.level3;

public class pW {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int n=10;
		for(int i=0;i<=n;i++)
		{
		for(int j=0;j<=n;j++)
		{
			if(j==0 || j==n || (i>=n/2 && j==n-i)||(i>=n/2 && j==i) )
			{
			System.out.print("* ");
			}
			else
			{
				System.out.print("  ");
			}
		}
		System.out.println();
		}

	}

}
